<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drawer_layout"
	tools:context=".ui.view_CourseOverview">


	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent" >

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<View
					android:layout_width="1280dp"
					android:layout_height="800dp"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:background="@drawable/_bg__surface_pro_8___1_ek2_shape" />

				<View
					android:layout_width="1280dp"
					android:layout_height="800dp"
					android:background="@drawable/login_background" />

				<View
					android:layout_width="1280dp"
					android:layout_height="90dp"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:background="@drawable/navbar_shape" />


				<ImageButton
					android:id="@+id/btnHamburgerMenu"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:onClick="btnHamburgerMenuOnClick"
					android:padding="25dp"
					android:src="@drawable/menu" />

				<ImageView
					android:layout_width="74dp"
					android:layout_height="81dp"
					android:layout_marginStart="491dp"
					android:layout_marginTop="9dp"
					android:contentDescription="codelingo_logo_1"
					android:src="@drawable/codelingo_logo" />

				<com.google.android.material.navigation.NavigationView
					android:id="@+id/nav_view"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="start"
					android:translationZ="3dp"
					android:visibility="gone"
					app:headerLayout="@layout/header"
					app:menu="@menu/main_menu" />

				<TextView
					android:layout_width="205dp"
					android:layout_height="59dp"
					android:layout_marginLeft="576dp"
					android:layout_marginTop="20dp"
					android:text="@string/codelingo_string"
					android:textColor="@color/_bg__surface_pro_8___1_ek2_color"
					android:textSize="40sp" />


				<ImageView
					android:layout_width="19.44dp"
					android:layout_height="18.23dp"
					android:layout_marginStart="25dp"
					android:layout_marginTop="36dp"
					android:contentDescription="vector"
					android:src="@drawable/hamburger_menu"
					android:visibility="gone" />

				<androidx.fragment.app.FragmentContainerView
					android:id="@+id/fragmentContainerView3"
					android:name="CodeLinguists.codelingo.ui.cont_CourseOverview"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_marginTop="110dp" />

			</RelativeLayout>
		</RelativeLayout>

	</LinearLayout>
</HorizontalScrollView>