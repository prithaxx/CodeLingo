<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="255dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/chapterTile"
        android:layout_width="265dp"
        android:layout_height="228dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:alpha="0.5"
        android:background="@drawable/rectangle_4_shape" />

    <View
        android:layout_width="240dp"
        android:layout_height="152dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/innerrect1_shape" />

    <ImageView
        android:id="@+id/chpt_image"
        android:layout_width="227dp"
        android:layout_height="145dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="35dp"
        android:contentDescription="design4"
        android:src="@drawable/course_tile_4" />

    <TextView
        android:id="@+id/title"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="86dp"
        android:layout_marginBottom="33dp"
        android:gravity="center"
        android:text="@string/placeholder" />

    <ImageView
        android:id="@+id/chapterLock"
        android:layout_width="198dp"
        android:layout_height="159dp"
        android:layout_alignStart="@+id/chapterTile"
        android:layout_alignTop="@+id/chapterTile"
        android:layout_alignEnd="@+id/chapterTile"
        android:layout_alignBottom="@+id/chapterTile"
        android:layout_marginStart="34dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="43dp"
        android:src="@drawable/ic_lock"
        android:visibility="gone"
        tools:srcCompat="@drawable/ic_lock" />

</RelativeLayout>